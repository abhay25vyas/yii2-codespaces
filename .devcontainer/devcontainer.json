{
  "name": "Yii2 Codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [80],
  "postCreateCommand": "composer install && php yii serve --host=0.0.0.0 &",
  "customizations": {
    "vscode": {
      "extensions": [
        "xdebug.php-pack",
        "felixfbecker.php-intellisense"
      ]
    }
  }
}
